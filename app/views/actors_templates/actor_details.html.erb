<hr>

<h1>Filmography</h1>

<table border="1">

<%@filmography.each do |a_mov|%>
<tr>
   <td>
    <% e= Movie.where({:id=>a_mov.movie_id}).at(0)%>
    <%=e.title%>
  </td>


  <td>
   <% e= Movie.where({:id=>a_mov.movie_id}).at(0)%>
    <%=e.year%>
  </td>

  <td>
    <% e= Movie.where({:id=>a_mov.movie_id}).at(0)%>
     <% d= Director.where({:id=>e.director_id}).at(0)%>
    <%=d.name%>

  </td>

  <td>
    <%=a_mov.name%>
  </td>

  <td>
  <% e= Movie.where({:id=>a_mov.movie_id}).at(0)%>
    <a href="/movies/<%=e.id%>">Show details</a>
  </td>

</tr>
<%end%>
</table>

